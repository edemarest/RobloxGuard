<Window x:Class="RobloxGuard.UI.PinEntryDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Parent Unlock"
        WindowStyle="ToolWindow"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        Background="#F0F0F0"
        Width="350"
        Height="250"
        ShowInTaskbar="False">
    
    <Grid Margin="20">
        <StackPanel VerticalAlignment="Center">
            
            <TextBlock Text="ðŸ” Parent Unlock"
                       FontSize="18"
                       FontWeight="Bold"
                       Foreground="#333333"
                       TextAlignment="Center"
                       Margin="0,0,0,15"/>
            
            <TextBlock Text="Enter parent PIN to unlock this game."
                       FontSize="12"
                       Foreground="#666666"
                       TextAlignment="Center"
                       TextWrapping="Wrap"
                       Margin="0,0,0,15"/>
            
            <PasswordBox x:Name="PinInput"
                         Height="40"
                         Padding="12,10"
                         FontSize="16"
                         FontFamily="Courier New"
                         Foreground="#333333"
                         Margin="0,0,0,15"/>
            
            <TextBlock x:Name="ErrorMessage"
                       Text=""
                       Foreground="#E74C3C"
                       FontSize="11"
                       TextAlignment="Center"
                       TextWrapping="Wrap"
                       MinHeight="20"
                       Margin="0,0,0,10"/>
            
            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Center"
                        Margin="0,0,0,0">
                
                <Button x:Name="SubmitButton"
                        Content="Unlock"
                        Foreground="White"
                        Background="#27AE60"
                        BorderThickness="0"
                        Width="100"
                        Height="40"
                        FontSize="13"
                        FontWeight="Bold"
                        Click="SubmitButton_Click"
                        Cursor="Hand"
                        Margin="0,0,10,0"/>
                
                <Button x:Name="CancelButton"
                        Content="Cancel"
                        Foreground="White"
                        Background="#95A5A6"
                        BorderThickness="0"
                        Width="100"
                        Height="40"
                        FontSize="13"
                        FontWeight="Bold"
                        Click="CancelButton_Click"
                        Cursor="Hand"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
