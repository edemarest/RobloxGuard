<Window x:Class="RobloxGuard.UI.AlertWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="RobloxGuard Alert" 
        WindowStartupLocation="CenterScreen"
        Background="#CC000000"
        AllowsTransparency="True"
        WindowStyle="None"
        SizeToContent="WidthAndHeight"
        Topmost="True"
        ShowInTaskbar="False"
        Loaded="Window_Loaded">
    <Grid Width="450" Height="250" Background="#FF1a1a1a" Margin="30">
        <Grid.Effect>
            <DropShadowEffect BlurRadius="20" ShadowDepth="5" Opacity="0.8" Color="Red"/>
        </Grid.Effect>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <!-- Warning Icon -->
            <TextBlock x:Name="WarningIcon" 
                       Text="⚠️" 
                       FontSize="72" 
                       HorizontalAlignment="Center"
                       Foreground="Red"
                       Margin="0,0,0,15"/>
            
            <!-- Main Message -->
            <TextBlock Text="UNSAFE GAME DETECTED" 
                       FontSize="28" 
                       FontWeight="Bold"
                       Foreground="Red"
                       HorizontalAlignment="Center"
                       TextAlignment="Center"
                       TextWrapping="Wrap"
                       Margin="0,0,0,15"/>
            
            <!-- Description -->
            <TextBlock Text="This game is blocked by RobloxGuard." 
                       FontSize="14" 
                       Foreground="#FFcccccc"
                       HorizontalAlignment="Center"
                       TextAlignment="Center"
                       TextWrapping="Wrap"
                       Margin="0,0,0,20"/>
            
            <!-- Auto-close countdown -->
            <TextBlock x:Name="CountdownText"
                       Text="This window will close in 3 seconds..." 
                       FontSize="11" 
                       Foreground="#FF888888"
                       HorizontalAlignment="Center"
                       TextAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
