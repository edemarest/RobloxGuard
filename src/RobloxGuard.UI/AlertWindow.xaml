<Window x:Class="RobloxGuard.UI.AlertWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="🛑 RobloxGuard Alert" 
        WindowStartupLocation="CenterScreen"
        Background="#1a1a1a"
        AllowsTransparency="False"
        WindowStyle="None"
        SizeToContent="WidthAndHeight"
        Topmost="True"
        ShowInTaskbar="True"
        Loaded="Window_Loaded"
        ResizeMode="NoResize"
        BorderThickness="8"
        BorderBrush="Red">
    
    <!-- Red pulsing animation effect -->
    <Window.Resources>
        <Storyboard x:Key="RedFlash" RepeatBehavior="Forever">
            <ColorAnimation Storyboard.TargetProperty="(Window.Background).(SolidColorBrush.Color)"
                            From="#FF3a0000" To="#FF1a1a1a" Duration="0:0:0.9" AutoReverse="True" />
        </Storyboard>
    </Window.Resources>
    
    <Grid Width="500" Height="280" Background="#1a1a1a">
        <Grid.Effect>
            <DropShadowEffect BlurRadius="25" ShadowDepth="8" Opacity="1" Color="Red"/>
        </Grid.Effect>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <!-- Warning Icon -->
            <TextBlock x:Name="WarningIcon" 
                       Text="⚠️" 
                       FontSize="80" 
                       HorizontalAlignment="Center"
                       Foreground="Red"
                       Margin="0,0,0,15"/>
            
            <!-- Main Message -->
            <TextBlock Text="UNSAFE GAME DETECTED" 
                       FontSize="32" 
                       FontWeight="ExtraBold"
                       Foreground="Red"
                       HorizontalAlignment="Center"
                       TextAlignment="Center"
                       TextWrapping="Wrap"
                       Margin="0,0,0,15"/>
            
            <!-- Description -->
            <TextBlock Text="This game has been blocked by RobloxGuard." 
                       FontSize="15" 
                       Foreground="#FFdddddd"
                       HorizontalAlignment="Center"
                       TextAlignment="Center"
                       TextWrapping="Wrap"
                       Margin="10,0,10,20"/>
            
            <!-- Auto-close countdown -->
            <TextBlock x:Name="CountdownText"
                       Text="Closing in 5 seconds..." 
                       FontSize="12" 
                       Foreground="#FF999999"
                       HorizontalAlignment="Center"
                       TextAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
