<Window x:Class="RobloxGuard.UI.AlertWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="🛑 RobloxGuard Alert" 
        WindowStartupLocation="CenterScreen"
        Background="#1a1a1a"
        AllowsTransparency="False"
        WindowStyle="None"
        SizeToContent="WidthAndHeight"
        Topmost="True"
        ShowInTaskbar="True"
        Loaded="Window_Loaded"
        ResizeMode="NoResize"
        BorderThickness="8"
        BorderBrush="Red">
    
    <!-- Red pulsing animation effect -->
    <Window.Resources>
        <Storyboard x:Key="RedFlash" RepeatBehavior="Forever">
            <ColorAnimation Storyboard.TargetProperty="(Window.Background).(SolidColorBrush.Color)"
                            From="#FF3a0000" To="#FF1a1a1a" Duration="0:0:0.9" AutoReverse="True" />
        </Storyboard>
        
        <!-- Text flashing animation for main message -->
        <Storyboard x:Key="TextFlash" RepeatBehavior="Forever">
            <ColorAnimation Storyboard.TargetName="MainMessage" Storyboard.TargetProperty="(TextBlock.Foreground).(SolidColorBrush.Color)"
                            From="#FFFF0000" To="#FF660000" Duration="0:0:0.6" AutoReverse="True" />
        </Storyboard>
    </Window.Resources>
    
    <Grid Width="600" Height="400" Background="#1a1a1a">
        <Grid.Effect>
            <DropShadowEffect BlurRadius="25" ShadowDepth="8" Opacity="1" Color="Red"/>
        </Grid.Effect>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <!-- Emoji Row: Brain and X (RED) -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,15">
                <TextBlock Text="🧠" FontSize="100" Margin="0,0,30,0" Foreground="Red"/>
                <TextBlock Text="❌" FontSize="100" Foreground="Red"/>
            </StackPanel>
            
            <!-- Main Message - BRAINDEAD CONTENT DETECTED -->
            <TextBlock x:Name="MainMessage"
                       Text="BRAINDEAD&#xA;CONTENT DETECTED" 
                       FontSize="56" 
                       FontWeight="ExtraBold"
                       Foreground="Red"
                       HorizontalAlignment="Center"
                       TextAlignment="Center"
                       TextWrapping="Wrap"
                       Margin="0,0,0,15"
                       LineHeight="70"/>
            
            <!-- Auto-close countdown -->
            <TextBlock x:Name="CountdownText"
                       Text="Closing in 20 seconds..." 
                       FontSize="14" 
                       Foreground="#FF999999"
                       HorizontalAlignment="Center"
                       TextAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
